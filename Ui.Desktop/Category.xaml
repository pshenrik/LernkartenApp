        </ListView>
        <Button Content="find" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="569,24,0,0" Click="Button_Click_2" Height="23"/>
        <TextBox Height="23" TextWrapping="Wrap" Text="search..." Margin="316,24,220,372"/>



        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged_2" Margin="176,24,0,0">
            <ComboBoxItem>
                <StackPanel Orientation="Horizontal">

                    <TextBlock Foreground="Red">Name</TextBlock>
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem>
                <StackPanel Orientation="Horizontal">

                    <TextBlock Foreground="Green">Text</TextBlock>
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem>
                <StackPanel Orientation="Horizontal">

                    <TextBlock Foreground="Blue">Date</TextBlock>
                </StackPanel>
            </ComboBoxItem>
        </ComboBox>







    </Grid>
</Window>
