                <RadialGradientBrush>
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF3754C5"/>
                </RadialGradientBrush>
            </Button.Background>
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="{DynamicResource {x:Static SystemColors.ActiveCaptionColorKey}}" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
        <Rectangle Height="39" Margin="0,74,0,0" Stroke="#FFEEDFDF" VerticalAlignment="Top">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF958F8F" Offset="0.08"/>
                    <GradientStop Color="#FFA9C2E8"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Label Content="04/50 lern Cards used" HorizontalAlignment="Left" Margin="221,0,0,306" VerticalAlignment="Bottom" Width="356" Foreground="#FFFDF6F6" FontSize="30"/>
        <ListView Margin="0,113,0,0" Name="ListView1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="789" Height="296" SelectionChanged="ListView1_SelectionChanged" Foreground="DarkRed">
            <ListViewItem Selected="ListViewItem_Selected" FontSize="36"/>
            <ListViewItem Content="01| was ist 5 + 6?" FontSize="36">

            </ListViewItem>

            <Label>11</Label>


            <ListViewItem Content="02| warum ...? " FontSize="36" Selected="ListViewItem_Selected_1"></ListViewItem>
