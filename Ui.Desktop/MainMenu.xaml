        <Border x:Name="BorderUp" BorderThickness="1" Height="78" Margin="0,-4,0,0" VerticalAlignment="Top" Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" HorizontalAlignment="Left" Width="789">
