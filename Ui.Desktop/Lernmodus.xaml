<Window x:Class="De.HsFlensburg.LernkartenApp001.Ui.Desktop.Lernmodus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:De.HsFlensburg.LernkartenApp001.Logic.Ui.ViewModels;assembly=Logic.Ui"
        xmlns:local="clr-namespace:De.HsFlensburg.LernkartenApp001.Ui.Desktop"
        mc:Ignorable="d"
        Title="Lernmodus" Height="450" Width="800">

    <Window.DataContext>
        <Binding Path="LernmodusVM" Source="{StaticResource ViewModelLocator}" />
    </Window.DataContext>

 
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="45" Margin="295,320,0,0" TextWrapping="Wrap" Text="{Binding Path=AnswerInputText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalAlignment="Top" Width="335" SpellCheck.IsEnabled="True" Cursor="IBeam"/>
        <Button Content="Hilfe" HorizontalAlignment="Left" Margin="212,328,0,0" VerticalAlignment="Top" Width="67" Height="30" Command="{Binding RequestHelpCommand, Mode=OneWay}" />
        <Button Content="Makieren" HorizontalAlignment="Left" Margin="129,328,0,0" VerticalAlignment="Top" Width="64" Height="30" Command="{Binding MarkCardCommand, Mode=OneWay}"/>
        <Button Content="Fertig" HorizontalAlignment="Left" Margin="663,328,0,0" VerticalAlignment="Top" Width="67" Height="30" Command="{Binding SubmitAnswerCommand, Mode=OneWay}" RenderTransformOrigin="1.687,0.467"/>
        <Button Content="Abbrechen" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="64" Height="30" Command="{Binding CancelTrainingCommand, Mode=OneWay}"/>
        <Image HorizontalAlignment="Left" Height="158" VerticalAlignment="Top" Width="335" Margin="296,82,0,0"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="158" Stroke="Black" VerticalAlignment="Top" Width="335" Margin="296,82,0,0"/>
        <TextBlock HorizontalAlignment="Left" Margin="296,245,0,0" 
                   TextWrapping="Wrap" Text="{Binding Path=CurrentCard.Front.Text, UpdateSourceTrigger=PropertyChanged}"
                   VerticalAlignment="Top" Width="335" Height="51" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="418,52,0,0" 
                   TextWrapping="Wrap" Text="{Binding Path=CurrentCard.Name, UpdateSourceTrigger=PropertyChanged}"
                   VerticalAlignment="Top" FontSize="18"/>
        <TextBlock HorizontalAlignment="Left" Margin="661,15,0,0" 
                   TextWrapping="Wrap" Text="Gelernte Karten in diesem Durchlauf" VerticalAlignment="Top" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="704,57,0,0" 
                   TextWrapping="Wrap" Text="{Binding Path=LearnedCardsCounter, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                   VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <ListBox ItemsSource="{Binding FinishedCards}" HorizontalAlignment="Left" Height="269" Margin="15,95,0,0" VerticalAlignment="Top" Width="114" Cursor="None">
        </ListBox>
        <Label Content="Letzte Karten&#xD;&#xA;&#xD;&#xA;" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Width="82" Height="26"/>

    </Grid>
</Window>
